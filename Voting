#include<iostream>
using namespace std ;

int main() {
    int age;
    cout<< "Election commision of India:";
    cout<< "\ncheck your age eligibility for voting:";
    cout<< "\nEnter age of the citizen";
    cin>>age;
    if (age >= 18) {
        cout << "\n congratulations You are eligible for voting";
    } 
    else {
        cout << "\nSorry You are not eligible for voting";
    }
    return 0;
}
